{% extends 'base.html.twig' %}
{% block body %}

    <h1>Group {{ group.name }} infos:</h1>
    <div class="container bg-light rounded p-3 ">
        <div class="row">
            <div class="col-3 col-sm-3 placeholder text-center">
                <img src="data:image/gif;base64,R0lGODlhAQABAIABAAJ12AAAACwAAAAAAQABAAACAkQBADs=" width="200"
                     height="200" class="img-fluid rounded-circle" alt="Generic placeholder thumbnail">
                <h4 >Site N°1</h4>
                <div class="text-muted">TOP 3 | TOP 10 </div>
            </div>
            <div class="col-4 col-sm-4 text-center">
                <h3>Targets</h3>
             {% for target in targets %}
                 {{ target.name }}:
                 <a href="{{ path('target_show',{'id':target.id}) }}">{{ target.pattern }}</a><br>
                    {% endfor %}
            </div><div class="col-4 col-sm-4  text-center">
                <h3>Searches</h3>
                {% for search in searches %}
                    <a href="{{ path('target_show',{'id':search.id}) }}">{{ search.keyword }}</a><br>
                {% endfor %}
            </div>
            <div class="col-1 col-sm-1">
                <div class="text-right">
                    <a href="{{ path('group_delete', {'id': group.id}) }}"><button class="btn btn-danger">✕</button></a>
                </div>

            </div>
        </div>
    </div>
    <br>
{% endblock %}