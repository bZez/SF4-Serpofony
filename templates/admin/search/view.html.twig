{% extends 'base.html.twig' %}
{% block body %}

    <h1>Search {{ search.id }} infos:</h1>
    <div class="container-fluid bg-light rounded p-3 ">
        <div class="row">
            <div class="col-3 col-sm-3 placeholder text-center">
                <img src="data:image/gif;base64,R0lGODlhAQABAIABAAJ12AAAACwAAAAAAQABAAACAkQBADs=" width="200"
                     height="200" class="img-fluid rounded-circle" alt="Generic placeholder thumbnail">
                <h4 >Site N°1</h4>
                <div class="text-muted">TOP 3 | TOP 10 </div>
            </div>
            <div class="col-3 col-sm-3 text-center">
               <h3>Group</h3>
               <a href="{{ path('group_show',{'id': search.group.id }) }}"> {{ search.group.name }}</a>
            </div><div class="col-3 col-sm-3  text-center">
                <h3>Keywords</h3>
              {{ search.keyword }}
            </div>
            <div class="col-3 col-sm-3">
                <div class="text-right">
                    <a href="{{ path('search_delete', {'id': search.id}) }}"><button class="btn btn-danger">✕</button></a>
                </div>

            </div>
        </div>
    </div>
    <br>
       <h2 class="text-center">Ranks:</h2>
<hr>
<div class="container-fluid bg-light rounded p-3 ">
    <table class="table-hover table table-responsive-xl">
        <thead>
        <tr>
            <th>#</th>
            <th>URL</th>
            <th>Keywords</th>
        </tr>
        </thead>
        <tbody>
        {% if ranks is defined %}
            {% for rank in ranks %}
                <tr>
                    <td>{{ rank.rank }}</td>
                    <td>

                            {% if rank.url == 'https://www.agencelimitless.fr/' %}
                                <a href="{{ path('target_show',{'id':1}) }}"> ✓
                                {% endif %}
                        {{ rank.url }}</a> </td>
                    <td>{{ rank.search.keyword }}</td>
                </tr>
            {% endfor %}
        {% endif %}

        </tbody>
    </table>
</div>
{% endblock %}