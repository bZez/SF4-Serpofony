{% extends 'base.html.twig' %}
{% block body %}

    <div class="container">

        <form name="user" method="post" class="form-signin">
            <h2 class="form-signin-heading">Create user:</h2>
            <div>
                <label for="user_username" class="required sr-only">Username</label>
                <input type="text" id="user_username" name="user[username]" required="required" placeholder="Username" class="form-control"/>
            </div>
            <div>
                <label for="user_email" class="required sr-only">Email</label>
                <input type="email" id="user_email" name="user[email]" required="required" placeholder="Email" class="form-control"/>
            </div>

            <div>
                <label for="user_plainPassword_first" class="required sr-only">Password</label>
                <input type="password" id="user_plainPassword_first" name="user[plainPassword][first]"
                       required="required" placeholder="Password" class="form-control"/>
            </div>
            <div>
                <label for="user_plainPassword_second" class="required sr-only">Repeat Password</label>
                <input type="password" id="user_plainPassword_second" name="user[plainPassword][second]"
                       required="required" placeholder="Confirm password" class="form-control"
                style="border-radius:5px;"/>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Create !</button>
        </form>

    </div>
{% endblock %}